<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include("./partials/head",{title:'Login'})%>
    </head>
    <body>
        <header class="header-login">
            <%-include("./partials/header")%>
        </header>
        <main class="main-login">
            <form class="formulario-login" action="/users/login" method="POST" name= "formulario-registro">
                
                <input class="input-texto" type="email" name="email" placeholder="Correo electrónico" value="<%= locals.oldData && oldData.email ? oldData.email : null %>">
                <% if (locals.errors && errors.email) { %>
                    <p style="color: #D84D09;"><%= errors.email.msg %> </p> 
                <% } %>

                <input class="input-texto" type="password" name="password"  placeholder="Contraseña"  value="<%= locals.oldData && oldData.password ? oldData.password : null %>">
                <% if (locals.errors && errors.password) { %>
                    <p style="color: #D84D09;"><%= errors.password.msg %> </p> 
                <% } %> 
                
                <label for="">Recordame</label>
                <input type="checkbox" name="recordame">
                
                <button class="boton-login" type="submit">Enviar</button>

                <div class="login-troubleshooting">
                    <a  href="#">Olvidé mi contraseña</a>
                    <a  href="/register">No tengo cuenta</a>
                </div>
                

            </form>
        </main>
        <%-include('./partials/footer')  %> 
    </body>
</html>