<section class="product-box">
                        
    <figure class="product-box_image">
        <img class="img-article-cart" src="/img/products/<%= product.image %>  " alt="imagen de producto">
    </figure>
    <div class="product-box_data">
        <p class="price-product">$ <%= product.price %> </p>
        <% if(product.discount != 0){%>
        <p class="discount-price">OFF%  <%= product.discount %> </p>
        <%} %> 
        <p class="product-name"> <%= product.name %> </p>
        <a href="/products/<%= product.id %> " class="product-detail-cart">Ver detalle</a>
        <p class="presentation">PRESENTACIÃ“N: <%= product.mensure_value + ' ' + product.unitMensure.type%> </p>
        <p class="category" id="category"><%= product.category.name%> </p>
        <button class="cart-button" type="submit" data-name="<%= product.name %>" data-price="<%= product.price %>" data-unit="<%= product.unitMensure.type%>"  data-value="<%= product.mensure_value%>" data-id="<%= product.id%>">
            <i class="fas fa-shopping-cart"></i>AGREGAR
        </button>
    </div>
<script src="/js/orders.js"></script>
</section>