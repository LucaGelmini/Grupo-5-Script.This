<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include("./partials/head", {title:'Register'})%>
    </head>
    <body>
        <header>
            <%-include("./partials/header")%>
        </header>
        <main class="main-register">
            <form class="formulario-register" method="POST" name= "formulario-registro" enctype="multipart/form-data">
                <h2>Creá tu cuenta</h2>
                <%- include('./partials/img-button-preview') %> 
                <input class="input-texto" type="text" name="nombre" placeholder="Nombre/s y apellido/s">
                <input class="input-texto" type="text" name="user-name" placeholder="Nombre de usuario">
                <input class="input-texto" type="email" name="email" placeholder="Correo electrónico">

                <label class="label-header" for="b-date">Fecha de nacimiento: </label>
                <input class="input-texto" type="date" name="b-date">

                <input class="input-texto" type="text" name="direccion" placeholder="Dirección">

                <label class="label-header">Perfil del usuario</label>
                <div class="perfil-usr">
                    <div>
                        <input type="radio" id="comprador" value="perfil-comprador" name="radio-perfil-usuario">
                        <label for="comprador">Comprador</label>
                    </div>
                    <div>    
                        <input type="radio" id="vendedor" value="perfil-vendedor" name="radio-perfil-usuario"> 
                        <label for="vendedor">Vendedor</label>
                    </div>
                </div>

                <label class="label-header">Intereses</label>
                <div class="categorias-interes">
                    
                    <div class="categoria-int">
                        <label for="verduras">Verduras</label>
                        <input type="checkbox" id="verduras" value="verduras">
                    </div>
                    <div class="categoria-int">
                        <label for="Frutas">Frutas</label>
                        <input type="checkbox" id="Frutas" value="Frutas">
                    </div>
                    <div class="categoria-int">
                        <label for="frutos-secos">Frutos secos</label>
                        <input type="checkbox" id="frutos-secos" value="frutos-secos">
                    </div>
                    <div class="categoria-int">
                        <label for="miel">Miel</label>
                        <input type="checkbox" id="miel" value="miel">
                    </div>
                    <div class="categoria-int">
                        <label for="vida-sana">Vida sana</label>
                        <input type="checkbox" id="vida-sana" value="vida-sana">
                    </div>
                </div>
                
            
                <input class="input-texto" type="password"  placeholder="Contraseña">
                <input class="input-texto" type="password"  placeholder="Confirmar contraseña">

                <div class="botones-register">
                    <button type="submit"><p>Enviar</p></button>
                    <button type="reset">Borrar</button>
                </div>

            </form>
        </main>
        <%-include('./partials/footer')  %> 
    </body>
</html>